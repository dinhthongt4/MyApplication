<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/imgAvatar"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAvatar"
        android:text="Chia điểm kịch tính, Inter và Juve tự níu chân nhau"
        android:textColor="@color/textview.activity.detail_title"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvTitle"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInformation"
        android:layout_toRightOf="@id/imgAvatar"
        android:text="Trong trận cầu tâm điểm vòng 8 Serie A, Inter và Juventus đã cầm chân nhau sau 90 phút kịch tín"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13dp"
        />
</RelativeLayout>
